!!! 5
html
  head
    title= title
    meta(name='viewport', content='width=device-width,initial-scale=1')
    link(rel='stylesheet', href='jquery-wijmo.css')
    script(type='text/javascript', src='jquery-1.8.0.min.js')
    script(type='text/javascript', src='jquery-ui-1.8.23.custom.min.js')
    script(type='text/javascript', src='globalize.min.js')
    script(type='text/javascript', src='raphael-min.js')
    script(type='text/javascript', src='jquery.wijmo.raphael.js')
    script(type='text/javascript', src='jquery.wijmo.wijchartcore.js')
    script(type='text/javascript', src='jquery.wijmo.wijlinechart.js')
    script
      $(document).ready(function () {
        var data = [!{data}];

        $("#wijlinechart1").wijlinechart({
          header: {
            visible: true,
            text: "Moisture over time",
            textStyle: {
              fill: "#fafafa"
            }
          },
          axis: {
            y: {
              labels: {
                style: {
                  fill: "#7f7f7f",
                  "font-size": 11
                }
              },
              gridMajor: {
                style: { stroke: "#353539", "stroke-dasharray": "- " }
              },
              tickMajor: { position: "outside", style: { stroke: "#7f7f7f"} },
              tickMinor: { position: "outside", style: { stroke: "#7f7f7f"} }
            },
            x: {
              labels: {
                style: {
                  fill: "#7f7f7f",
                  "font-size": 11,
                  rotation: -45
                }
              },
              tickMajor: { position: "outside", style: { stroke: "#7f7f7f"} }
            }
          },
          showChartLabels: false,
          hint: {
            content: function () {
              return this.data.lineSeries.label + '\n' + this.x + '\n' + this.y + '';
            },
            contentStyle: {
              "font-size": 10
            },
            offsetY: -10
          },
          legend: {
            visible: true
          },
          dataSource: data,
          seriesList: [
            {
              label: "m0",
              legendEntry: true,
              data: { x: { bind: "ardtime"}, y: { bind: "m0"} },
              markers: { visible: true, type: "circle" }
            }, {
              label: "m1",
              legendEntry: true,
              data: { x: { bind: "ardtime"}, y: { bind: "m1"} },
              markers: { visible: true, type: "circle" }
            }
          ],
          seriesStyles: [
            { stroke: "#ff9900", "stroke-width": 3 }
          ],
          seriesHoverStyles: [
            { "stroke-width": 4 }
          ]
        });

        $("#wijlinechart2").wijlinechart({
          header: {
            visible: true,
            text: "Temperature over time",
            textStyle: {
              fill: "#fafafa"
            }
          },
          axis: {
            y: {
              labels: {
                style: {
                  fill: "#7f7f7f",
                  "font-size": 11
                }
              },
              gridMajor: {
                style: { stroke: "#353539", "stroke-dasharray": "- " }
              },
              tickMajor: { position: "outside", style: { stroke: "#7f7f7f"} },
              tickMinor: { position: "outside", style: { stroke: "#7f7f7f"} }
            },
            x: {
              labels: {
                style: {
                  fill: "#7f7f7f",
                  "font-size": 11,
                  rotation: -45
                }
              },
              tickMajor: { position: "outside", style: { stroke: "#7f7f7f"} }
            }
          },
          showChartLabels: false,
          hint: {
            content: function () {
              return this.data.lineSeries.label + '\n' + this.x + '\n' + this.y + '';
            },
            contentStyle: {
              "font-size": 10
            },
            offsetY: -10
          },
          legend: {
            visible: true
          },
          dataSource: data,
          seriesList: [
            {
              label: "m0",
              legendEntry: true,
              data: { x: { bind: "ardtime"}, y: { bind: "t"} },
              markers: { visible: true, type: "circle" }
            }
          ],
          seriesStyles: [
            { stroke: "#ff9900", "stroke-width": 3 }
          ],
          seriesHoverStyles: [
            { "stroke-width": 4 }
          ]
        });
      })
  body
    div(data-role='page', id="Page1")
      div(data-role='header')
        h1= title 
        #{mode} #{views} 
      div(id="wijlinechart1", class="ui-widget ui-widget-content ui-corner-all", style="width: 640px; height: 320px; background: #242529;") 
      div(id="wijlinechart2", class="ui-widget ui-widget-content ui-corner-all", style="width: 640px; height: 320px; background: #242529;") 
      img(src='images/lastsnap.jpg')
      div(data-role='content')    
        ul(data-role='listview',data-inset='true',data-filter='false')
              li: a(href='#Page1') Page 1
      div(data-role='footer')
        h5 Page footer

